# Flux RPC Configuration (bundled daemon - automatically configured)
# Note: Flux daemon v9.0.0 is bundled in the Docker image
FLUX_RPC_URL=http://localhost:16124
FLUX_RPC_USER=fluxrpc
FLUX_RPC_PASSWORD=change_this_password_to_something_secure
FLUX_RPC_TIMEOUT=30000

# PostgreSQL Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=fluxindexer
DB_USER=fluxindexer
DB_PASSWORD=your_secure_password_here

# Database Connection Pool
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=10000

# Indexer Configuration
INDEXER_START_HEIGHT=0
INDEXER_BATCH_SIZE=100
INDEXER_POLLING_INTERVAL=1000
INDEXER_MAX_REORG_DEPTH=100

# API Server Configuration
API_PORT=42067
API_HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=info
# LOG_FILE=/var/log/fluxindexer.log

# Enable development features (optional)
# NODE_ENV=development
